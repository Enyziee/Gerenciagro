{
	"compilerOptions": {
		"strict": true,
		"target": "ES2022",
		"module": "commonjs",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"outDir": "./dist"
	},
	"include": ["src/**/*"]
}
